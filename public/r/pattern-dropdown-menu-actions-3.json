      "path": "registry/new-york/patterns/dropdown-menu/actions/dropdown-menu-actions-3.tsx",
      "content": "\"use client\";\n\nimport {\n  Archive,\n  Copy,\n  Edit,\n  Facebook,\n  Linkedin,\n  Mail,\n  MoreHorizontal,\n  Share2,\n  Trash2,\n  Twitter,\n} from \"lucide-react\";\nimport { Button } from \"@/components/ui/button\";\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuSub,\n  DropdownMenuSubContent,\n  DropdownMenuSubTrigger,\n  DropdownMenuTrigger,\n} from \"@/components/ui/dropdown-menu\";\n\nexport const title = \"Card Actions with Nested Share\";\n\nconst Example = () => (\n  <DropdownMenu>\n    <DropdownMenuTrigger asChild>\n      <Button className=\"h-8 w-8\" size=\"icon\" variant=\"ghost\">\n        <MoreHorizontal className=\"h-4 w-4\" />\n      </Button>\n    </DropdownMenuTrigger>\n    <DropdownMenuContent align=\"end\" className=\"w-48\">\n      <DropdownMenuItem>\n        <Edit />\n        Edit\n      </DropdownMenuItem>\n      <DropdownMenuItem>\n        <Copy />\n        Duplicate\n      </DropdownMenuItem>\n      <DropdownMenuSeparator />\n      <DropdownMenuSub>\n        <DropdownMenuSubTrigger className=\"px-2 py-1.5\">\n          <Share2 className=\"mr-2 size-4 text-muted-foreground\" />\n          <span>Share</span>\n        </DropdownMenuSubTrigger>\n        <DropdownMenuSubContent>\n          <DropdownMenuItem>\n            <Mail />\n            Email\n          </DropdownMenuItem>\n          <DropdownMenuItem>\n            <Twitter />\n            Twitter\n          </DropdownMenuItem>\n          <DropdownMenuItem>\n            <Facebook />\n            Facebook\n          </DropdownMenuItem>\n          <DropdownMenuItem>\n            <Linkedin />\n            LinkedIn\n          </DropdownMenuItem>\n        </DropdownMenuSubContent>\n      </DropdownMenuSub>\n      <DropdownMenuSeparator />\n      <DropdownMenuItem>\n        <Archive />\n        Archive\n      </DropdownMenuItem>\n      <DropdownMenuItem variant=\"destructive\">\n        <Trash2 />\n        Delete\n      </DropdownMenuItem>\n    </DropdownMenuContent>\n  </DropdownMenu>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}