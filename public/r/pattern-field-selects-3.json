      "path": "registry/new-york/patterns/field/selects/field-selects-3.tsx",
      "content": "import { Field, FieldDescription, FieldLabel } from \"@/components/ui/field\";\nimport {\n  Select,\n  SelectContent,\n  SelectGroup,\n  SelectItem,\n  SelectLabel,\n  SelectTrigger,\n  SelectValue,\n} from \"@/components/ui/select\";\n\nexport const title = \"Select with Groups\";\n\nconst Example = () => (\n  <div className=\"w-full max-w-md\">\n    <Field>\n      <FieldLabel>Timezone</FieldLabel>\n      <Select>\n        <SelectTrigger className=\"bg-background\">\n          <SelectValue placeholder=\"Select timezone\" />\n        </SelectTrigger>\n        <SelectContent>\n          <SelectGroup>\n            <SelectLabel>North America</SelectLabel>\n            <SelectItem value=\"est\">Eastern Time</SelectItem>\n            <SelectItem value=\"cst\">Central Time</SelectItem>\n            <SelectItem value=\"mst\">Mountain Time</SelectItem>\n            <SelectItem value=\"pst\">Pacific Time</SelectItem>\n          </SelectGroup>\n          <SelectGroup>\n            <SelectLabel>Europe</SelectLabel>\n            <SelectItem value=\"gmt\">London</SelectItem>\n            <SelectItem value=\"cet\">Central Europe</SelectItem>\n            <SelectItem value=\"eet\">Eastern Europe</SelectItem>\n          </SelectGroup>\n        </SelectContent>\n      </Select>\n      <FieldDescription>Choose your local timezone.</FieldDescription>\n    </Field>\n  </div>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}