      "path": "registry/new-york/patterns/context-menu/text/context-menu-text-1.tsx",
      "content": "import { Clipboard, Copy, Scissors } from \"lucide-react\";\nimport {\n  ContextMenu,\n  ContextMenuContent,\n  ContextMenuItem,\n  ContextMenuSeparator,\n  ContextMenuShortcut,\n  ContextMenuTrigger,\n} from \"@/components/ui/context-menu\";\n\nexport const title = \"Text Editing Menu\";\n\nconst Example = () => (\n  <ContextMenu>\n    <ContextMenuTrigger className=\"flex h-[200px] w-full max-w-lg items-center justify-center rounded-md border border-dashed text-sm\">\n      Right click to edit text\n    </ContextMenuTrigger>\n    <ContextMenuContent className=\"w-56\">\n      <ContextMenuItem>\n        <Scissors />\n        <span>Cut</span>\n        <ContextMenuShortcut>⌘X</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Copy />\n        <span>Copy</span>\n        <ContextMenuShortcut>⌘C</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Clipboard />\n        <span>Paste</span>\n        <ContextMenuShortcut>⌘V</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuSeparator />\n      <ContextMenuItem>Select All</ContextMenuItem>\n    </ContextMenuContent>\n  </ContextMenu>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}