      "path": "registry/new-york/patterns/context-menu/table/context-menu-table-4.tsx",
      "content": "import { Copy, Minus, Plus, Trash2 } from \"lucide-react\";\nimport {\n  ContextMenu,\n  ContextMenuContent,\n  ContextMenuItem,\n  ContextMenuSeparator,\n  ContextMenuShortcut,\n  ContextMenuTrigger,\n} from \"@/components/ui/context-menu\";\n\nexport const title = \"Table Row Operations Menu\";\n\nconst Example = () => (\n  <ContextMenu>\n    <ContextMenuTrigger className=\"flex h-[200px] w-full max-w-lg items-center justify-center rounded-md border border-dashed text-sm\">\n      Right click on row\n    </ContextMenuTrigger>\n    <ContextMenuContent className=\"w-56\">\n      <ContextMenuItem>\n        <Plus />\n        <span>Insert Row Above</span>\n        <ContextMenuShortcut>⌘↑</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Plus />\n        <span>Insert Row Below</span>\n        <ContextMenuShortcut>⌘↓</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuSeparator />\n      <ContextMenuItem>\n        <Copy />\n        <span>Duplicate Row</span>\n        <ContextMenuShortcut>⌘D</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuSeparator />\n      <ContextMenuItem variant=\"destructive\">\n        <Trash2 />\n        <span>Delete Row</span>\n        <ContextMenuShortcut>⌘⌫</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem variant=\"destructive\">\n        <Minus />\n        <span>Delete Selected Rows</span>\n      </ContextMenuItem>\n    </ContextMenuContent>\n  </ContextMenu>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}