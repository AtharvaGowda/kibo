  "description": "A dialog pattern: dialog-standard-1",
  "registryDependencies": [],
  "files": [
    {
      "path": "registry/new-york/patterns/dialog/standard/dialog-standard-1.tsx",
      "content": "import { Button } from \"@/components/ui/button\";\nimport {\n  Dialog,\n  DialogContent,\n  DialogDescription,\n  DialogFooter,\n  DialogHeader,\n  DialogTitle,\n  DialogTrigger,\n} from \"@/components/ui/dialog\";\n\nexport const title = \"Standard\";\n\nconst Example = () => (\n  <Dialog>\n    <DialogTrigger asChild>\n      <Button variant=\"outline\">Open Dialog</Button>\n    </DialogTrigger>\n    <DialogContent className=\"sm:max-w-md\">\n      <DialogHeader>\n        <DialogTitle>Share this link</DialogTitle>\n        <DialogDescription>\n          Anyone who has this link will be able to view this document.\n        </DialogDescription>\n      </DialogHeader>\n      <div className=\"flex items-center space-x-2\">\n        <div className=\"grid flex-1 gap-2\">\n          <input\n            className=\"h-9 rounded-md border border-input bg-background px-3 py-1 text-sm\"\n            readOnly\n            value=\"https://example.com/share/abc123\"\n          />\n        </div>\n        <Button className=\"px-3\" size=\"sm\">\n          Copy\n        </Button>\n      </div>\n      <DialogFooter className=\"sm:justify-start\">\n        <Button type=\"button\" variant=\"secondary\">\n          Close\n        </Button>\n      </DialogFooter>\n    </DialogContent>\n  </Dialog>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}