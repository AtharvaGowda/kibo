      "path": "registry/new-york/patterns/context-menu/standard/context-menu-standard-2.tsx",
      "content": "import { Copy, Download, Eye, Share2, Trash } from \"lucide-react\";\nimport {\n  ContextMenu,\n  ContextMenuContent,\n  ContextMenuItem,\n  ContextMenuShortcut,\n  ContextMenuTrigger,\n} from \"@/components/ui/context-menu\";\n\nexport const title = \"Context Menu with Icons and Shortcuts\";\n\nconst Example = () => (\n  <ContextMenu>\n    <ContextMenuTrigger className=\"flex h-[200px] w-full max-w-lg items-center justify-center rounded-md border border-dashed text-sm\">\n      Right click here\n    </ContextMenuTrigger>\n    <ContextMenuContent className=\"w-56\">\n      <ContextMenuItem>\n        <Eye />\n        <span>View</span>\n        <ContextMenuShortcut>⌘V</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Copy />\n        <span>Copy Link</span>\n        <ContextMenuShortcut>⌘C</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Share2 />\n        <span>Share</span>\n        <ContextMenuShortcut>⌘S</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Download />\n        <span>Download</span>\n        <ContextMenuShortcut>⌘D</ContextMenuShortcut>\n      </ContextMenuItem>\n      <ContextMenuItem variant=\"destructive\">\n        <Trash />\n        <span>Delete</span>\n        <ContextMenuShortcut>⌘⌫</ContextMenuShortcut>\n      </ContextMenuItem>\n    </ContextMenuContent>\n  </ContextMenu>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}