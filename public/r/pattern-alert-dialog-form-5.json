  "files": [
    {
      "path": "registry/new-york/patterns/alert-dialog/form/alert-dialog-form-5.tsx",
      "content": "import {\n  AlertDialog,\n  AlertDialogAction,\n  AlertDialogCancel,\n  AlertDialogContent,\n  AlertDialogDescription,\n  AlertDialogFooter,\n  AlertDialogHeader,\n  AlertDialogTitle,\n  AlertDialogTrigger,\n} from \"@/components/ui/alert-dialog\";\nimport { Button } from \"@/components/ui/button\";\nimport { Input } from \"@/components/ui/input\";\nimport { Label } from \"@/components/ui/label\";\n\nexport const title = \"Form with Validation State\";\n\nconst Example = () => (\n  <AlertDialog>\n    <AlertDialogTrigger asChild>\n      <Button variant=\"outline\">Transfer</Button>\n    </AlertDialogTrigger>\n    <AlertDialogContent>\n      <AlertDialogHeader>\n        <AlertDialogTitle>Transfer Project</AlertDialogTitle>\n        <AlertDialogDescription>\n          Type the project name to confirm the transfer.\n        </AlertDialogDescription>\n      </AlertDialogHeader>\n      <div className=\"space-y-4 py-4\">\n        <div className=\"space-y-2\">\n          <Label htmlFor=\"confirm-name\">\n            Project Name: <span className=\"font-mono\">my-project</span>\n          </Label>\n          <Input\n            className=\"border-destructive focus-visible:ring-destructive\"\n            id=\"confirm-name\"\n            placeholder=\"Type project name\"\n          />\n          <p className=\"text-destructive text-xs\">\n            Project name does not match\n          </p>\n        </div>\n      </div>\n      <AlertDialogFooter>\n        <AlertDialogCancel>Cancel</AlertDialogCancel>\n        <AlertDialogAction className=\"opacity-50\" disabled>\n          Transfer\n        </AlertDialogAction>\n      </AlertDialogFooter>\n    </AlertDialogContent>\n  </AlertDialog>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
}