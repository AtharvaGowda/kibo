      "content": "\"use client\";\n\nimport { Button } from \"@/components/ui/button\";\nimport { Checkbox } from \"@/components/ui/checkbox\";\nimport {\n  Drawer,\n  DrawerClose,\n  DrawerContent,\n  DrawerDescription,\n  DrawerFooter,\n  DrawerHeader,\n  DrawerTitle,\n  DrawerTrigger,\n} from \"@/components/ui/drawer\";\nimport { Label } from \"@/components/ui/label\";\nimport { Slider } from \"@/components/ui/slider\";\n\nexport const title = \"Right Drawer Filter Panel\";\n\nconst Example = () => (\n  <Drawer direction=\"right\">\n    <DrawerTrigger asChild>\n      <Button variant=\"outline\">Filters</Button>\n    </DrawerTrigger>\n    <DrawerContent>\n      <DrawerHeader>\n        <DrawerTitle>Filters</DrawerTitle>\n        <DrawerDescription>\n          Refine your search with these filters\n        </DrawerDescription>\n      </DrawerHeader>\n      <div className=\"space-y-6 overflow-y-auto p-4\">\n        <div className=\"space-y-3\">\n          <Label className=\"font-medium text-sm\">Category</Label>\n          <div className=\"space-y-2\">\n            <div className=\"flex items-center space-x-2\">\n              <Checkbox id=\"electronics\" />\n              <label\n                className=\"text-sm leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70\"\n                htmlFor=\"electronics\"\n              >\n                Electronics\n              </label>\n            </div>\n            <div className=\"flex items-center space-x-2\">\n              <Checkbox id=\"clothing\" />\n              <label\n                className=\"text-sm leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70\"\n                htmlFor=\"clothing\"\n              >\n                Clothing\n              </label>\n            </div>\n            <div className=\"flex items-center space-x-2\">\n              <Checkbox id=\"books\" />\n              <label\n                className=\"text-sm leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70\"\n                htmlFor=\"books\"\n              >\n                Books\n              </label>\n            </div>\n          </div>\n        </div>\n        <div className=\"space-y-3\">\n          <Label className=\"font-medium text-sm\">Price Range</Label>\n          <Slider data-vaul-no-drag defaultValue={[50]} max={100} step={1} />\n          <div className=\"flex justify-between text-muted-foreground text-xs\">\n            <span>$0</span>\n            <span>$1000</span>\n          </div>\n        </div>\n        <div className=\"space-y-3\">\n          <Label className=\"font-medium text-sm\">Rating</Label>\n          <div className=\"space-y-2\">\n            <div className=\"flex items-center space-x-2\">\n              <Checkbox id=\"5stars\" />\n              <label\n                className=\"text-sm leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70\"\n                htmlFor=\"5stars\"\n              >\n                ⭐⭐⭐⭐⭐\n              </label>\n            </div>\n            <div className=\"flex items-center space-x-2\">\n              <Checkbox id=\"4stars\" />\n              <label\n                className=\"text-sm leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70\"\n                htmlFor=\"4stars\"\n              >\n                ⭐⭐⭐⭐\n              </label>\n            </div>\n          </div>\n        </div>\n      </div>\n      <DrawerFooter>\n        <Button>Apply Filters</Button>\n        <DrawerClose asChild>\n          <Button variant=\"outline\">Reset</Button>\n        </DrawerClose>\n      </DrawerFooter>\n    </DrawerContent>\n  </Drawer>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
