      "path": "registry/new-york/patterns/context-menu/standard/context-menu-standard-3.tsx",
      "content": "import { Clipboard, Copy, Edit, Scissors, Trash2 } from \"lucide-react\";\nimport {\n  ContextMenu,\n  ContextMenuContent,\n  ContextMenuItem,\n  ContextMenuSeparator,\n  ContextMenuTrigger,\n} from \"@/components/ui/context-menu\";\n\nexport const title = \"Context Menu with Separators\";\n\nconst Example = () => (\n  <ContextMenu>\n    <ContextMenuTrigger className=\"flex h-[200px] w-full max-w-lg items-center justify-center rounded-md border border-dashed text-sm\">\n      Right click here\n    </ContextMenuTrigger>\n    <ContextMenuContent className=\"w-56\">\n      <ContextMenuItem>\n        <Edit />\n        <span>Edit</span>\n      </ContextMenuItem>\n      <ContextMenuSeparator />\n      <ContextMenuItem>\n        <Scissors />\n        <span>Cut</span>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Copy />\n        <span>Copy</span>\n      </ContextMenuItem>\n      <ContextMenuItem>\n        <Clipboard />\n        <span>Paste</span>\n      </ContextMenuItem>\n      <ContextMenuSeparator />\n      <ContextMenuItem variant=\"destructive\">\n        <Trash2 />\n        <span>Delete</span>\n      </ContextMenuItem>\n    </ContextMenuContent>\n  </ContextMenu>\n);\n\nexport default Example;\n",
      "type": "registry:component"
    }
  ]
